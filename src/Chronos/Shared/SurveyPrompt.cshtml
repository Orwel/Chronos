<div class="alert alert-secondary mt-4" role="alert">
    <span class="oi oi-pencil mr-2" aria-hidden="true"></span> 
    <strong>@Title</strong>

    <span class="text-nowrap">
        Please take our
        <a class="font-weight-bold" href="" onclick=@OpenSurveyAsync>brief survey</a>
    </span>
    and tell us what you think.
</div>

@functions {
    [Parameter] string Title { get; set; } // Demonstrates how a parent component can supply parameters

    async Task OpenSurveyAsync()
    {
        await Electron.Shell.OpenExternalAsync("https://go.microsoft.com/fwlink/?linkid=2006382");
    }
}
